<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".CompanyDetailActivity" >

    <!-- 头部栏 开始 -->

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title" >

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:id="@+id/title_note"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/ico_fanhui" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_main_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/company_detail"
            android:textColor="@color/white"
            android:textSize="@dimen/tvs_survey" />

        <ImageView
            android:id="@+id/title_research"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:src="@drawable/btn_sousuo_normal" />
    </RelativeLayout>
    <!-- 头部栏 结束 -->

    <ScrollView
        android:id="@+id/sv_gd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:scrollbars="@null" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_gd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gd_image_height" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_gd_line"
                android:layout_marginBottom="@dimen/gd_image_margin_bottom"
                android:layout_marginLeft="@dimen/gd_image_margin_left"
                android:background="@drawable/bg_goods_details_viewpager"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/tv_gd_image_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_gd_image_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="9sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_gd_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/vp_gd"
                android:src="#2146a9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv_gd_line"
                android:orientation="vertical" >

                <!-- 公司基本信息  开始 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_company_icon"
                        android:layout_width="@dimen/company_icon_width"
                        android:layout_height="@dimen/company_icon_width"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/company_icon_padding_top"
                        android:layout_marginLeft="@dimen/company_icon_padding_left"
                        android:layout_marginRight="@dimen/company_icon_padding_right"
                        android:layout_marginTop="@dimen/company_icon_padding_top"
                        android:scaleType="fitXY"
                        android:src="@drawable/head" />

                    <TextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/company_name_margin_top"
                        android:layout_toRightOf="@id/iv_company_icon"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <!-- 关注 商品 新品 开始 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/iv_company_icon" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/company_name_margin_top"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_follow_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/fund_details_concern"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_good_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/company_info_horizontal_spacing"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/company_good"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_new_goods_nums"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/company_info_horizontal_spacing"
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:text="@string/company_new_good"
                                android:textColor="#999999"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                    <!-- 关注 商品 新品 结束 -->

                </RelativeLayout>
                <!-- 公司基本信息  结束 -->


                <!-- 全部商品 新品 促销 开始 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/photo_word_height"
                    android:orientation="horizontal" >

                    <!-- 全部商品 -->

                    <RelativeLayout
                        android:id="@+id/rl_all_goods"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_vertical"
                                android:src="@drawable/btn_quanbushangpin" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/text_marigin_in_left_image"
                                android:layout_marginTop="@dimen/photo_word_margin_top"
                                android:gravity="center_vertical"
                                android:text="@string/company_all_goods"
                                android:textColor="#f7931e"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/company_divider_width"
                        android:layout_height="@dimen/company_divider_height"
                        android:layout_gravity="center_vertical"
                        android:background="#eaeaea" />

                    <!-- 新品 -->

                    <RelativeLayout
                        android:id="@+id/rl_new_goods"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/btn_xinpin" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/text_marigin_in_left_image"
                                android:layout_marginTop="@dimen/photo_word_margin_top"
                                android:gravity="center_vertical"
                                android:text="@string/company_new_good"
                                android:textColor="#f7931e"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <!-- 全部商品 新品 促销 结束 -->


                <!-- 公司简介 -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/total_left_padding_half"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:id="@+id/ll_company_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/newest_zixun_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/total_left_padding"
                        android:src="@drawable/ico_gongsijianjie" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/newest_zixun_margin_left"
                        android:text="@string/company_introduce"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/nav_margin_right"
                            android:src="@drawable/btn_tiaozhuan" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#eaeaea" />

                <!-- 股票详情 -->

                <LinearLayout
                    android:id="@+id/ll_company_gupianxiangqing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/newest_zixun_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/total_left_padding"
                        android:src="@drawable/ico_gupiaoxiangqing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/newest_zixun_margin_left"
                        android:text="@string/company_gupiaoxiangqing"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/nav_margin_right"
                            android:src="@drawable/btn_tiaozhuan" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#eaeaea" />

                <!-- 最新资讯 标题 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/newest_zixun_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/total_left_padding"
                        android:src="@drawable/ico_zixun" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/newest_zixun_margin_left"
                        android:text="@string/company_newest_zixun"
                        android:textColor="#666666"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width_small"
                    android:background="#eaeaea" />

                <!-- 最新推出 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/newest_push_height"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/total_left_padding"
                    android:text="@string/company_newest_push"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <com.example.shareholders.common.MyListView
                    android:id="@+id/lv_newest_push"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#eaeaea"
                    android:dividerHeight="@dimen/line_width_small"
                    android:scrollbars="@null" >
                </com.example.shareholders.common.MyListView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:background="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <!-- 底部栏 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignBottom="@+id/sv_gd"
        android:layout_alignParentBottom="true"
        android:alpha="0.9"
        android:background="@drawable/company_detail_background"
        android:clickable="true"
        android:orientation="horizontal" >

        <!-- 关注 -->

        <LinearLayout
            android:id="@+id/rl_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_guanzhu_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_guanzhu_size"
                android:src="@drawable/guanzhu_normal" />

            <TextView
                android:id="@+id/tv_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/guanzhu"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>