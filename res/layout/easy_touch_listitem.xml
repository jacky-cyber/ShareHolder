<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/et_item_right_title_text"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="@dimen/et_item_left_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_etl_time"
            android:layout_width="@dimen/et_item_left_text_width"
            android:layout_height="@dimen/et_item_left_text_height"
            android:background="@drawable/ico_hudong_timeboard"
            android:gravity="center"
            android:text="07:12"
            android:textColor="#ff7a13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_huodong_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/et_item_right_top"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_etl_right"
                android:layout_width="@dimen/et_item_img_size"
                android:layout_height="@dimen/et_item_img_size"
                android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/et_item_right_name_left"
                android:layout_marginTop="@dimen/et_item_right_top1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_etl_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="He Jv"
                    android:textColor="#7f9fef"
                    android:textSize="@dimen/et_item_right_name" />

                <TextView
                    android:id="@+id/tv_etl_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/et_item_right_title_top"
                    android:text="一回头就找到出路"
                    android:textColor="#262626"
                    android:textSize="@dimen/et_item_right_title" />
                    <TextView
         android:id="@+id/tv_etl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/et_item_right_title_text"
        android:text="qwqwqwd"
        android:textColor="#000000"
        android:textSize="@dimen/et_item_right_name" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>