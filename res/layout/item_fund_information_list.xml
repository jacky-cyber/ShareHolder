<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fi_item_height"
    android:background="@color/white">"
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/white"
    	android:layout_centerVertical="true"
    	>
    
		<TextView
		    android:id="@+id/item_fi_title" 
		    android:layout_width="250dp"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/item_fi_details"
		    android:text="支付宝可以冲校园卡啦"
			android:singleLine="true"
		    android:ellipsize="end"
		    android:textColor="#333333"
		    android:textSize="14sp"
		    />
		
		<TextView
		    android:id="@+id/item_fi_time" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignRight="@+id/item_fi_details"
		    android:text="2015-07-21 15:33"
		    android:textColor="#dd8822"
		    android:textSize="11sp"
		    />
		
		<TextView
		    android:id="@+id/item_fi_details" 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/item_fi_title"
		    android:layout_marginLeft="@dimen/fi_margin_left"
		    android:layout_marginRight="@dimen/fi_margin_left"
		    android:text="谢天谢地，支付宝终于可以冲校园卡了！只是冲100要交200！充200要交410！多充多送！"
		    android:maxLines="4"
		    android:ellipsize="end"
		    android:textColor="#939393"
		    android:textSize="11sp"
		    />
	
	</RelativeLayout>
	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:layout_alignParentBottom="true"
	    android:background="#eaeaea"
	    />
    
	
</RelativeLayout>
