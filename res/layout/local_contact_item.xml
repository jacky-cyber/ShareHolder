<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="27dp"
        android:layout_weight="1.0"
        android:background="#f7f7f7"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/total_margin_left_small"
        android:text="A"
        android:textColor="#262626" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textColor="#262626" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/local_contact_invite_title_hight"
            android:layout_marginLeft="@dimen/local_contact_name_left"
            android:gravity="center_vertical"
            android:text="hhhh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right|center_vertical" >

            <TextView
                android:id="@+id/tv_invite"
                android:layout_width="@dimen/local_contact_invite_width"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/local_contact_margin_right"
                android:background="@drawable/local_contact_invite_back"
                android:gravity="center"
                android:text="@string/stock_friends_local_contacts_invite"
                android:textColor="#ffffff"
                android:textSize="@dimen/local_contact_invite_text_size" />
        </LinearLayout>
    </LinearLayout>
    
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="#eaeaea"
        android:layout_marginRight="10dp"/>

</LinearLayout>