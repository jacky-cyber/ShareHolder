<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical" >

    <!-- 头部栏 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#2146a9" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/query_fund_title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!-- 返回键 -->

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/title_note_left"
            android:paddingRight="@dimen/title_note_left" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ico_fanhui" />
        </RelativeLayout>
    </RelativeLayout>
    <!-- 头部栏结束 -->
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/query_fund_item_margin_top"
        android:background="#efeff4"
        />


    <!-- 搜索前 -->

    <LinearLayout
        android:id="@+id/ll_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >


        <!-- 收益区间 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/query_fund_item_height"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/query_fund_item_padding"
                android:src="@drawable/ico_shouyiriqujian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/earning_interval_margin_left"
                android:layout_toRightOf="@id/iv"
                android:text="@string/earning_interval"
                android:textColor="#5d5d5d"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_small"
            android:background="#eaeaea" />

        <!-- 起始时间 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/query_fund_item_height"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/query_fund_item_padding"
                android:text="@string/query_fund_start_date"
                android:textColor="#5d5d5d"
                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/ll_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingRight="@dimen/query_fund_item_padding" >

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1990.1.1"
                    android:textColor="#939393" />

                <ImageView
                    android:id="@+id/iv_edit_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/edit_time_margin_left"
                    android:src="@drawable/ico_jiantou" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_small"
            android:background="#eaeaea" />

        <!-- 结束时间 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/query_fund_item_height"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/query_fund_item_padding"
                android:text="@string/query_fund_end_date"
                android:textColor="#5d5d5d"
                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/ll_end_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingRight="@dimen/query_fund_item_padding" >

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1990.1.1"
                    android:textColor="#939393" />

                <ImageView
                    android:id="@+id/iv_edit_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/edit_time_margin_left"
                    android:src="@drawable/ico_jiantou" />
            </LinearLayout>
        </RelativeLayout>

        <!-- 查询按钮 -->

        <TextView
            android:id="@+id/tv_query"
            android:layout_width="@dimen/query_btn_width"
            android:layout_height="@dimen/query_btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/query_btn_margin_top"
            android:background="@drawable/btn_query_non_style"
            android:gravity="center"
            android:text="@string/query_btn"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>
    <!-- 搜索前  -结束 -->


    <!-- 点击搜索按钮后的界面显示 -->

    <LinearLayout
        android:id="@+id/ll_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/query_fund_item_height"
            android:layout_marginTop="@dimen/query_fund_item_margin_top"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/query_fund_item_padding"
                android:src="@drawable/ico_shouyiriqujian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/earning_interval_margin_left"
                android:layout_toRightOf="@id/iv2"
                android:text="@string/earning_interval"
                android:textColor="#5d5d5d"
                android:textSize="15sp" />
        </RelativeLayout>

        <!-- 日期区间 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/time_interval_margin_bottom"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tv_start_result_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/query_fund_item_padding"
                android:text="2012.12.12"
                android:textColor="#dd8822"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/query_fund_item_padding"
                android:layout_marginRight="@dimen/query_fund_item_padding"
                android:layout_toRightOf="@id/tv_start_result_time"
                android:text="——"
                android:textColor="#939393"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_end_result_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv"
                android:text="2012.12.12"
                android:textColor="#dd8822"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_choose_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/query_fund_item_padding"
                android:text="@string/select_again"
                android:textColor="#dd8822"
                android:textSize="11sp" />
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_choose_again"
                android:layout_marginTop="5dp"
                android:background="#eaeaea"
                />
            
        </RelativeLayout>
        
        <LinearLayout 
            android:id="@+id/ll_empty_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ico_query_empty"
	            />
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="找不到符合條件的基金"
	            />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="@null" >

            <com.example.shareholders.common.MyListView
                android:id="@+id/lv_query_fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#eaeaea"
                android:dividerHeight="@dimen/line_width_small" >
            </com.example.shareholders.common.MyListView>
        </ScrollView>
    </LinearLayout>

    <!-- 点击搜索按钮后的界面显示  -结束 -->

</LinearLayout>