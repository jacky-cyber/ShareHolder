<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/inform_dialog_width"
    android:layout_height="@dimen/inform_dialog_height"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_dialog_survey_list_style"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ico_gou" />

        <TextView
            android:id="@+id/tv_inform_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/inform_dialog_text_padding_left"
            android:paddingRight="@dimen/inform_dialog_text_padding_left"
            android:gravity="center"
            android:paddingBottom="@dimen/inform_dialog_text_bottom"
            android:paddingTop="@dimen/inform_dialog_text_bottom"
            android:text="@string/inform_dialog"
            android:textColor="#5d5d5d"
            android:textSize="@dimen/inform_edit_dialog_text" />

        <Button
            android:id="@+id/btn_inform_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inform_dialog_button_height"
            android:layout_marginBottom="@dimen/inform_dialog_button_bottom"
            android:layout_marginLeft="@dimen/inform_dialog_button_padding"
            android:layout_marginRight="@dimen/inform_dialog_button_padding"
            android:text="@string/confirm"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:background="@drawable/btn_complete_style"
             />
    </LinearLayout>

</RelativeLayout>