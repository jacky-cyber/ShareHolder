                <ImageView
                    android:id="@+id/space_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#262626" />

                <LinearLayout
                    android:id="@+id/rl_comment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/space_line"
