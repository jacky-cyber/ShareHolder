<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fund_details_item_height"
    android:background="@color/white"
    android:paddingLeft="@dimen/fund_details_margin_left"
    android:paddingTop="@dimen/fund_details_item_padding_top"
    android:paddingBottom="@dimen/fund_details_item_padding_bottom"
    android:orientation="horizontal" >
    
        <TextView 
            android:id="@+id/item_fund_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#333333"
            />
        
        <TextView 
            android:id="@+id/item_fund_details_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fund_details_item_open_margin_left1"
            android:textSize="11sp"
            android:textColor="#333333"
            />
        
        <TextView 
            android:id="@+id/item_fund_details_accumulate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fund_details_item_open_margin_left2"
            android:textSize="11sp"
            android:textColor="#333333"
            />
        
        <TextView 
            android:id="@+id/item_fund_details_growth_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fund_details_item_open_margin_left3"
            android:textSize="11sp"
            android:textColor="@color/fund_Details_code_color"
            />
    

</LinearLayout>
