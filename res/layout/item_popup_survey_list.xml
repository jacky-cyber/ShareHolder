<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:id="@+id/rl_ascending"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_item_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/popup_item_padding"
        android:paddingRight="@dimen/popup_item_padding" >

        <TextView
            android:id="@+id/tv_ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/time_in_ascending_order"
            android:textColor="#848585" />

        <ImageView
            android:id="@+id/iv_ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_duigou"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>
