<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_photo_style"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photo_popup_btn_height"
                android:gravity="center"
                android:text="@string/copy"
                android:textColor="#4678db"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width_small"
                android:layout_marginLeft="@dimen/photo_popup_line_margin"
                android:layout_marginRight="@dimen/photo_popup_line_margin"
                android:background="#b2b2b2" />

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photo_popup_btn_height"
                android:gravity="center"
                android:text="@string/report"
                android:textColor="#4678db"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width_small"
                android:layout_marginLeft="@dimen/photo_popup_line_margin"
                android:layout_marginRight="@dimen/photo_popup_line_margin"
                android:background="#b2b2b2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_popup_btn_height"
            android:layout_below="@+id/ll"
            android:layout_marginTop="5dp"
            android:background="@drawable/popup_photo_style"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#4678db"
            android:textSize="13sp" />

</RelativeLayout>