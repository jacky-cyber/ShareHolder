<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_query_fund_margin_bottom"
        android:layout_marginLeft="@dimen/query_fund_item_padding"
        android:layout_marginTop="@dimen/query_fund_item_padding"
        android:layout_weight="1" >
        
        <!-- 第一行 -->

        <RelativeLayout
            android:id="@+id/ll_first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_fund_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="安利你买不买基金"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fund_rate"
                android:layout_width="@dimen/rate_width"
                android:layout_height="@dimen/rate_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_fund_rate"
                android:gravity="center"
                android:text="92.11%"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="010101"
                    android:textColor="#dd8822"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/category_number_margin"
                    android:text="开放星"
                    android:textColor="#939393"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>
        <!-- 第一行结束 -->


        <!-- 第二行 -->

        <LinearLayout
            android:id="@+id/ll_second_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_first_row"
            android:layout_marginTop="@dimen/second_row_margin_top"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一个交易日"
                android:textColor="#939393"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/second_row_margin_left"
                android:text="01-01-01"
                android:textColor="#dd8822"
                android:textSize="8sp" />
        </LinearLayout>
        <!-- 第二行结束 -->


        <!-- 第三行 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_second_row"
            android:layout_marginTop="@dimen/second_row_margin_top"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第二个交易日"
                android:textColor="#939393"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/second_row_margin_left"
                android:text="01-01-01"
                android:textColor="#dd8822"
                android:textSize="8sp" />
        </LinearLayout>
        <!-- 第二行结束 -->

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/total_left_padding"
            android:paddingRight="@dimen/total_left_padding"
            android:paddingTop="@dimen/total_left_padding"
            android:src="@drawable/btn_fs_unselected" />
    </RelativeLayout>

</LinearLayout>