<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_layout"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_fl_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title" >

        <ImageView
            android:id="@+id/title_fl_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_note_left"
            android:padding="5dp"
            android:src="@drawable/ico_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/foud_list_title"
            android:textColor="@color/white"
            android:textSize="@dimen/tvs_survey" />
        
        <ImageView
                android:id="@+id/title_fl_research"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/title_note_left"
                android:padding="@dimen/return_padding"
                android:src="@drawable/btn_sousuo_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_fl_title"
        android:id="@+id/rl_fl_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- 评论标题栏 -->

        <ImageView
            android:id="@+id/fl_space_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#262626" />

        <LinearLayout
            android:id="@+id/rl_fl_foud_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space_line"
            android:layout_marginTop="14dp"
            android:background="@color/foud_title_background_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fl_open_foud"
                android:layout_width="match_parent"
                android:layout_height="@dimen/foud_title_height"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/open_foud"
                android:textColor="@color/foud_text_base_color"
                android:textSize="13sp" />
            
            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/foud_title_height"
                android:background="@color/foud_text_base_color"/>

            <TextView
                android:id="@+id/tv_fl_closed_foud"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/foud_title_height"
                android:layout_weight="1"
                android:textColor="@color/foud_text_base_color"
                android:gravity="center"
                android:text="@string/closed_foud"                
                android:textSize="13sp" />
            
            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/foud_title_height"
                android:background="@color/foud_text_base_color"/>

            <TextView
                android:id="@+id/tv_fl_money_foud"
                android:layout_width="match_parent"
                android:layout_height="@dimen/foud_title_height"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/money_foud"
                android:textColor="@color/foud_text_base_color"
                android:textSize="13sp" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/rl_fl_foud_buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_fl_foud_title"
            android:background="@color/foud_title_background_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rl_fl_open_foud_buttom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/foud_text_base_color"/>
            
            <ImageView
                android:id="@+id/rl_fl_closed_foud_buttom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/foud_text_base_color"/>
            
            <ImageView
                android:id="@+id/rl_fl_money_foud_buttom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/foud_text_base_color"/>
            
        </LinearLayout>
        <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/rl_fl_foud_buttom"
		    android:background="@color/foud_title_background_color"
		    >
	        <LinearLayout
	            android:id="@+id/rl_fl_foud_item_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="0.5dp"
	            android:background="@color/foud_title_background_color"
	            android:orientation="horizontal">
	            
	            <TextView
	                android:id="@+id/rl_fl_foud_name_title"
	                android:layout_width="@dimen/foud_item_title_width"
	                android:layout_height="@dimen/foud_item_title_height"
	                
	                android:gravity="center"
	                android:textColor="@color/foud_title_item_color"
	                android:textSize="11sp" />
	            
	            <TextView
	                android:id="@+id/rl_fl_foud_num_title"
	                android:layout_width="wrap_content"
	                android:layout_height="@dimen/foud_item_title_height"
	                android:layout_marginLeft="@dimen/foud_item_title_margin_left1"
	                android:gravity="center"
	                android:text="@string/foud_code"
	                android:textColor="@color/foud_title_item_color"
	                android:textSize="11sp" />
	            
	            <TextView
	                android:id="@+id/rl_fl_foud_accrual_title"
	                android:layout_width="wrap_content"
	                android:layout_height="@dimen/foud_item_title_height"
	                android:layout_marginLeft="@dimen/foud_item_title_margin_left2"
	                android:gravity="center"
	                android:text="@string/foud_accrual"
	                android:textColor="@color/foud_title_item_color"
	                android:textSize="11sp" />
	            
	            <TextView
	                android:id="@+id/rl_fl_foud_rate_title"
	                android:layout_width="wrap_content"
	                android:layout_height="@dimen/foud_item_title_height"
	                android:layout_marginLeft="@dimen/foud_item_title_margin_left3"
	                android:gravity="center"
	                android:text="@string/foud_annual_rate"
	                android:textColor="@color/foud_title_item_color"
	                android:textSize="11sp" />
	
	            
	        </LinearLayout>
        </RelativeLayout>

        
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/rl_fl_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.example.shareholders.common.MyListView
            android:id="@+id/mv_foud_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ededed" >
        </com.example.shareholders.common.MyListView>
    </ScrollView>
	 <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.0"
        android:background="#000000" >
    </RelativeLayout>
</RelativeLayout>