<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/position_item_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/configuration_detail_title_padding_left"
        android:text="11-01-01"
        android:textColor="#333333"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_equality_register_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="15-01-01"
        android:textColor="#333333"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_ex_dividend_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="15-01-01"
        android:textColor="#333333"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grant_cash"
            android:textColor="#333333"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_per_dividend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0300å…ƒ"
            android:textColor="#333333"
            android:textSize="8sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dividend_grant_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="15-01-01"
        android:textColor="#333333"
        android:textSize="11sp" />

</LinearLayout>