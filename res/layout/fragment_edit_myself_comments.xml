<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/view_blank"
        android:layout_width="match_parent"
        android:layout_height="12.5dp"
        android:background="#efeff4" />
    
    
    <RelativeLayout
        android:id="@+id/rl_lv"
        android:layout_below="@+id/view_blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           
            android:background="@color/white" >

            <com.example.shareholders.common.PullToRefreshView
                android:id="@+id/refresh_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/lv_edit_myself_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:divider="#efeff4"
                    android:dividerHeight="6.5dp"
                    android:focusable="false" />
            </com.example.shareholders.common.PullToRefreshView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.0"
            android:background="#000000" >
        </RelativeLayout>
    </RelativeLayout>
    
	<TextView 
	    android:id="@+id/tv_wuzixuangu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#3662c1"
	    android:textSize="15sp"
	    android:text="暂无自选股"
	    android:layout_centerInParent="true"
	    android:visibility="gone"
	    />

</RelativeLayout>