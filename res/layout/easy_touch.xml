<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Easy_Touch" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/title_total_height"
                android:background="@color/title" >

                <RelativeLayout
                    android:id="@+id/rl_title"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/title_height"
                    android:background="@color/title" >

                    <ImageView
                        android:id="@+id/iv_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/title_note_left"
                        android:src="@drawable/ico_fanhui" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/easy_touch"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tvs_survey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/title_note_left"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_luyin_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/easy_touch_record"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ll_et_ll_details_text" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_easy_touch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingRight="@dimen/ll_et_ll_details_text_right_width" >

                <ImageView
                    android:id="@+id/iv_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/title_note_left"
                    android:layout_marginTop="@dimen/rl_et_image_top"
                    android:src="@drawable/img_load" />

                <TextView
                    android:id="@+id/tv_et_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/rl_et_image_right"
                    android:layout_marginTop="@dimen/rl_et_image_top"
                    android:layout_toRightOf="@+id/iv_et"
                    android:text="广东大粤网调研"
                    android:textColor="#a0a0a0"
                    android:textSize="@dimen/activity_search_survey_popular_city_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_et_title"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/ll_et__top1"
                    android:layout_toRightOf="@+id/iv_et"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ll_et_text_left"
                            android:text="@string/easy_touch_place"
                            android:textSize="@dimen/ll_et_ll_text" />

                        <TextView
                            android:id="@+id/tv_et_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="深圳"
                            android:textSize="@dimen/ll_et_ll_text" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ll_et_ll_left"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ll_et_text_left"
                                android:text="@string/easy_touch_field"
                                android:textColor="#8d76c3"
                                android:textSize="@dimen/ll_et_ll_text" />

                            <TextView
                                android:id="@+id/tv_et_field"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="制造业"
                                android:textColor="#8d76c3"
                                android:textSize="@dimen/ll_et_ll_text" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ll_et__top2"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ll_et_text_left"
                            android:text="@string/easy_touch_time"
                            android:textColor="#cb8552"
                            android:textSize="@dimen/ll_et_ll_text" />

                        <TextView
                            android:id="@+id/tv_et_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015.12.12"
                            android:textColor="#cb8552"
                            android:textSize="@dimen/ll_et_ll_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_et_text_breviary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ll_et__top3"
                        android:ellipsize="end"
                        android:singleLine="false"
                        android:text="现场互动"
                        android:textSize="@dimen/ll_et_ll_details_text" />

                    <TextView
                        android:id="@+id/tv_et_text_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_search_survey_margin_from_iv_to_tv"
                        android:text="收起"
                        android:textColor="#a0a0a0"
                        android:textSize="@dimen/activity_search_survey_popular_city_size" />
                </LinearLayout>
            </RelativeLayout>

            <com.example.shareholders.common.MyListView
                android:id="@+id/lv_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_item_edit_height"
        android:layout_alignParentBottom="true"
       
        android:orientation="vertical" >
 <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_item_edit_height"
       android:layout_marginTop="@dimen/et_item_right_title_text"
        android:orientation="horizontal" >
       
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           
            android:src="@drawable/ico_maikefeng" />

        <EditText
                    android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:singleLine="true"
               android:background="@drawable/bg_hudong_input"/>

        <ImageButton
                     android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
     
            android:background="@drawable/btm_huodong_send2"
            android:textSize="@dimen/et_item_button_text" />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>