<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:background="@drawable/bg_goods_details_popup">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_gd_collet"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="搜索"
                android:drawableLeft="@drawable/btn_youshangjiao1"
                android:drawablePadding="@dimen/gd_drawable_padding"
                />

        </RelativeLayout>
        
        <ImageView
                android:layout_width="70dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:src="#ffffff"
                />
        
         <RelativeLayout
            android:id="@+id/rl_gd_home"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="首页"
                android:drawableLeft="@drawable/btn_youshangjiao2"
                android:drawablePadding="@dimen/gd_drawable_padding"
                />

        </RelativeLayout>
        
        <ImageView
                android:layout_width="70dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:src="#ffffff"
                />
        
        <RelativeLayout
            android:id="@+id/rl_gd_share"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="分享"
                android:drawableLeft="@drawable/btn_youshangjiao3"
                android:drawablePadding="@dimen/gd_drawable_padding"
                />

        </RelativeLayout>
        
        <ImageView
                android:layout_width="70dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:src="#ffffff"
                />
        
    </LinearLayout>

</RelativeLayout>
