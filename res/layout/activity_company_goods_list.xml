<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CompanyGoodsListActivity" >

    <!-- 头部栏 开始 -->

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title"
        android:paddingRight="@dimen/search_item_paddingtop" >

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/title_padding_left"
            android:paddingRight="@dimen/title_padding_left" >

            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ico_fanhui" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ac_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_search_style"
            android:text="@string/search_SelectActivity"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_content_height_selectactivity"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/search_item_paddingtop"
            android:layout_toLeftOf="@id/tv_ac_search"
            android:layout_toRightOf="@id/rl_return"
            android:background="@drawable/bg_rl_search_content_style" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/search_activity_text_left"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ico_fangdajing" />

                <EditText
                    android:id="@+id/et_search_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/search_activity_image_left"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_product"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- 头部栏 结束 -->

    <ImageView
        android:id="@+id/iv_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/total_left_padding"
        android:layout_below="@id/rl_head"
        android:background="#f2f2f2" />

    <ListView
        android:id="@+id/lv_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_gray"
        android:divider="#eaeaea"
        android:dividerHeight="@dimen/line_width"
        android:scrollbars="@null" >
    </ListView>

    <!-- 当搜索结果为空时显示的布局 开始 -->

    <LinearLayout
        android:id="@+id/ll_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_head"
        android:layout_marginTop="@dimen/company_goods_tips_margin_top"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/company_goods_tips_margin_bottom"
            android:text="@string/can_find_nothing"
            android:textColor="#666666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_shopping_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/company_goods_shopping_again_height"
            android:layout_marginLeft="@dimen/company_goods_shopping_margin_left"
            android:layout_marginRight="@dimen/company_goods_shopping_margin_left"
            android:background="@drawable/btn_shopping_again_bg"
            android:gravity="center"
            android:text="@string/shopping_again"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 当搜索结果为空时显示的布局 结束 -->

</RelativeLayout>