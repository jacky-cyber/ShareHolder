<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/search_item_paddingtop"
    android:paddingTop="@dimen/search_item_paddingtop" >

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/search_item_padding"
        android:textSize="13sp"
        android:text="造纸厂" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/return_padding1"
        android:focusable="false"
        android:layout_marginRight="@dimen/search_item_padding"
        android:background="@drawable/ico_shangchu" />

</RelativeLayout>