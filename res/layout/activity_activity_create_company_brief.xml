<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_announcement"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title" >

        <ImageView
            android:id="@+id/iv_brief_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/return_padding"
            android:layout_marginLeft="@dimen/title_note_left"
            android:src="@drawable/ico_fanhui" />

        <TextView
            android:id="@+id/tv_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加调研企业"
            android:textColor="@color/white"
            android:textSize="@dimen/tvs_survey" />
        <TextView
            android:id="@+id/tv_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/return_padding"
          android:textColor="#b7b7b7"
             android:text="@string/brief_commit"
            android:layout_marginRight="@dimen/title_note_left"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_create_top"
        android:background="#e5e4e3" />
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/activity_edit_linear_top"
                   android:layout_marginBottom="@dimen/activity_edit_linear_top"
            android:orientation="vertical" >
   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_edit_img_padding"
                android:layout_marginRight="@dimen/activity_edit_img_padding"
                android:src="@drawable/ico_fangzi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_name"
                android:textColor="#848484"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_brief_name"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_edit_et_height"
            android:layout_marginBottom="@dimen/activity_edit_linear_top"
            android:layout_marginLeft="@dimen/activity_edit_et_left"
            android:layout_marginTop="@dimen/activity_edit_linear_top"
             android:layout_marginRight="@dimen/activity_edit_et_left"
            android:background="@drawable/bg_activity_edit"
            android:gravity="center_vertical"
            android:hint="@string/hint_text"
            android:textColorHint="#dbba9c"
            android:textSize="11sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c3c3c3" />
</LinearLayout>

 <ListView
     android:id="@+id/lv_brief"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >
 </ListView>

</LinearLayout>