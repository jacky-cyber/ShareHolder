<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title" >

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/title_note_left"
            android:paddingRight="@dimen/title_note_left" >

            <ImageView
                android:id="@+id/title_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_fanhui" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/reset_password"
            android:textColor="@color/white"
            android:textSize="@dimen/tvs_survey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/total_padding_largex"
        android:background="#efeff4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_password_margin_bottom"
        android:layout_marginLeft="@dimen/new_password_margin_left"
        android:layout_marginTop="@dimen/enter_old_password_margin_top"
        android:text="@string/input_old_password"
        android:textColor="#666666"
        android:textSize="15sp" />

    <com.example.shareholders.common.ClearEditText
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_login_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/tv_login_account_margin_left"
        android:layout_marginRight="@dimen/tv_login_account_margin_left"
        android:background="@drawable/btn_login_account"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/new_password_padding_left"
        android:paddingRight="@dimen/new_password_padding_left"
        android:phoneNumber="true"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/forget_password_margin_bottom"
        android:layout_marginRight="@dimen/forget_password_margin_right"
        android:layout_marginTop="@dimen/forget_password_margin_top"
        android:text="@string/forget_password_line"
        android:textColor="#dc8722" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/total_padding_largex"
        android:background="#efeff4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_password_margin_bottom"
        android:layout_marginLeft="@dimen/new_password_margin_left"
        android:layout_marginTop="@dimen/enter_new_password_margin_top"
        android:text="@string/input_new_password"
        android:textColor="#666666"
        android:textSize="15sp" />

    <com.example.shareholders.common.ClearEditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_login_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/tv_login_account_margin_left"
        android:layout_marginRight="@dimen/tv_login_account_margin_left"
        android:background="@drawable/btn_login_account"
        android:gravity="center_vertical"
        android:hint="@string/new_password_hint"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/new_password_padding_left"
        android:paddingRight="@dimen/new_password_padding_left"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_password_margin_bottom"
        android:layout_marginLeft="@dimen/new_password_margin_left"
        android:layout_marginTop="@dimen/enter_old_password_margin_top"
        android:text="@string/input_new_password_again"
        android:textColor="#666666"
        android:textSize="15sp" />

    <com.example.shareholders.common.ClearEditText
        android:id="@+id/et_new_password_again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_login_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/tv_login_account_margin_left"
        android:layout_marginRight="@dimen/tv_login_account_margin_left"
        android:background="@drawable/btn_login_account"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/new_password_padding_left"
        android:paddingRight="@dimen/new_password_padding_left"
        android:phoneNumber="true"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_login_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/tv_login_account_margin_left"
        android:layout_marginRight="@dimen/tv_login_account_margin_left"
        android:layout_marginTop="@dimen/reset_password_confirm_margin_top"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>