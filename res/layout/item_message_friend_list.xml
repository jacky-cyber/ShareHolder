<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:background="#ffffff" >

        <com.example.shareholders.common.CircleImageView
            android:id="@+id/message_center_friend_ic"
            android:layout_width="@dimen/message_center_friend_ic_size"
            android:layout_height="@dimen/message_center_friend_ic_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/message_center_image_left"
            android:src="@drawable/ico_default_friend" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/message_center_friend_lr_left"
            android:layout_marginRight="@dimen/message_center_friend_lr_right"
            android:layout_toLeftOf="@+id/message_center_time_shape5"
            android:layout_toRightOf="@+id/message_center_friend_ic"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/item_friend_name_n"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_friend_say"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_friend_say_top"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="@string/item_friend_say_n"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_center_time_shape5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/message_center_time_shape_right"
            android:layout_marginTop="@dimen/message_center_time_shape_top"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_friend_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:12"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_friend_count"
                android:layout_width="@dimen/message_center_time_height"
                android:layout_height="@dimen/message_center_time_width"
                android:layout_gravity="center|right"
                android:layout_marginTop="@dimen/item_friend_count_top"
                android:background="@drawable/message_center_time_background"
                android:gravity="center"
                android:text="99"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#eaeaea" />

</LinearLayout>