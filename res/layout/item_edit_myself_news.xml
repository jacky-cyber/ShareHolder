<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_edit_news"
        >
        
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            >
            <TextView 
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#103382"
                android:textSize="16sp"
                android:text="浦发银行"
                />
            <TextView 
                android:id="@+id/tv_symbol"
                android:layout_below="@+id/tv_company_name"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_company_name"
                android:layout_alignRight="@+id/tv_company_name"
                android:gravity="center"
                android:textColor="#103382"
                android:textSize="14sp"
                android:text="600000"
                />
        </RelativeLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#333333"
                android:textSize="15sp"
                android:maxLines="2"
                android:text="上国投资产成浦发银行第三大股东"
                />
            <TextView 
                android:id="@+id/tv_declareDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="7dp"
                android:gravity="right"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="2015.09.19"
                />
        </LinearLayout>
        
    </LinearLayout>
    
</RelativeLayout>
