<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title"
        android:paddingRight="@dimen/search_item_paddingtop" >

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/title_padding_left" >

            <ImageView
                android:id="@+id/iv_sign_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/return_padding1"
                android:src="@drawable/ico_fanhui" />
        </RelativeLayout>

        <TextView
            android:id="@+id/iv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_search_style_press"
            android:text="@string/search_SelectActivity"
            android:textColor="@color/detail_line"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_content_height_selectactivity"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/search_activity_rl_left"
            android:layout_marginRight="@dimen/search_item_paddingtop"
            android:layout_toLeftOf="@id/iv_sign"
            android:layout_toRightOf="@id/rl_return"
            android:background="@drawable/bg_rl_search_content_style" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/search_activity_text_left"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ico_fangdajing" />

                <EditText
                    android:id="@+id/et_sign_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/search_activity_image_left"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_activity_search_content"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_activity_linear_height"
        android:background="#efefef"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/search_activity_linear_padding"
            android:text="@string/sign_up_text"
            android:textColor="#262626"
            android:textSize="@dimen/search_activity_rl_textsize" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf" />

    <com.example.shareholders.common.MyListView
        android:id="@+id/lv_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#cfcfcf"
        android:dividerHeight="1dp" >
    </com.example.shareholders.common.MyListView>

</LinearLayout>