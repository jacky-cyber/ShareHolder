<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    

    <RelativeLayout
        android:id="@+id/fragment_share_situation_name"
        android:layout_width="110dp"
        android:layout_height="match_parent" 
        >
        
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="17dp"
	        android:id="@+id/fragment_share_situation_name_top"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:text="@string/position_name" />

        <ListView
            android:id="@+id/fragment_share_situation_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_share_situation_name_top" >

    	</ListView>
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/fragment_share_situation_roll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        
        >
        <HorizontalScrollView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:scrollbars="none" >
		
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent" >
		
		            <GridView
		                android:id="@+id/gridview_popular"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:gravity="center"
		                android:numColumns="10"
		                android:columnWidth="78dp"
		                android:horizontalSpacing="7.5dp"
		                android:stretchMode="none" >"
		            </GridView>
		            
		        </LinearLayout>
		        
		    </HorizontalScrollView>

        <!-- <ListView
            android:id="@+id/fragment_share_situation_roll_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

        </ListView> -->
   
   
     </RelativeLayout>
</LinearLayout>
