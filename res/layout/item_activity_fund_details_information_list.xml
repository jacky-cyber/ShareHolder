<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/item_fd_information_name"
        android:layout_width="120dp"
        android:layout_height="@dimen/fund_details_item_name_height"
        android:paddingLeft="@dimen/fund_details_margin_left"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="@color/fund_Details_unselected_color"
        />
    
    <TextView 
        android:id="@+id/item_fd_information_param"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/fund_details_margin_left"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="#333333"
        />

</LinearLayout>
