<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:padding="20dp" >

        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pop_verify_rl_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/pop_verify_ll_margin_top"
                android:layout_marginRight="@dimen/pop_verify_ll_margin_top"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_verify"
                android:gravity="left"
                android:paddingLeft="@dimen/pop_verify_edit_padding_left"
                android:textColor="#666666"
                android:textColorHint="#999999"
                android:textSize="15sp" >
            </EditText>

            <WebView
                android:id="@+id/iv_refer_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pop_verify_iv_height"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/pop_verify_ll_margin_top"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/pop_verify_confirm_width"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/pop_verify_confirm_margin_top"
            android:background="@drawable/btn_login_unable"
            android:gravity="center"
            android:text="@string/survey_list_confirm"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="6dp"
            android:src="@drawable/emotionstore_progresscancelbtn" />
    </RelativeLayout>

</RelativeLayout>