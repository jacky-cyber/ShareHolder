<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <View
        android:id="@+id/iv_fl_discuss_gap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_height"
        android:background="#efeff4" />

    <View
        android:id="@+id/iv_fl_discuss_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_below="@+id/iv_fl_discuss_gap"
        android:background="#eaeaea" />

    <LinearLayout
        android:id="@+id/ll_fl_discuss_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dicuss_title_height"
        android:layout_below="@+id/iv_fl_discuss_line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_sort_in_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sort_in_time_order"
            android:textColor="#dd8822"
            android:textSize="13sp" />

        <View
            android:layout_width="@dimen/line_width_small"
            android:layout_height="match_parent"
            android:background="#eaeaea" />

        <TextView
            android:id="@+id/tv_sort_in_heat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sort_in_heat_order"
            android:textColor="#939393"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:id="@+id/iv_fl_discuss_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_below="@+id/ll_fl_discuss_tab"
        android:background="#eaeaea" />

    <ScrollView
        android:id="@+id/sv_fl_discuss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_fl_discuss_line2"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.example.shareholders.common.MyListView
                android:id="@+id/lv_dicuss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#eaeaea"
                android:dividerHeight="@dimen/line_width_small" >
            </com.example.shareholders.common.MyListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="#eaeaea" />
        </LinearLayout>
    </ScrollView>
    
    <ImageView
        android:id="@+id/iv_write_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/iv_write_letter_margin"
        android:layout_marginRight="@dimen/iv_write_letter_margin"
        android:src="@drawable/ico_bianji" />

</RelativeLayout>