<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/survey_list_item_height"
    android:background="@color/white"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <com.example.shareholders.common.RoundRectImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/head_height"
        android:layout_height="@dimen/head_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/survey_item_head_margin_left" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/survey_item_title_margin_left"
        android:layout_toRightOf="@id/iv_head"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="造纸厂企业调研"
            android:textColor="#262626"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/survey_item_date_margin_top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.1.1"
                android:textColor="#8d8d8d"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="#8d8d8d"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.2.2"
                android:textColor="#8d8d8d"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/survey_item_margin_right"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_list_follow_member"
                android:textColor="#8d8d8d"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_follow_member_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#8d8d8d"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="@dimen/survey_item_state_margin_top"
            android:paddingLeft="@dimen/survey_item_margin_right"
            android:paddingRight="@dimen/survey_item_margin_right"
            android:paddingTop="@dimen/survey_item_state_margin_top"
            android:src="@drawable/btn_baoming" />
    </LinearLayout>


</RelativeLayout>