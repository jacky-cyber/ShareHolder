<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/total_padding_small"
        android:layout_marginTop="@dimen/refund_failed_margin_top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ico_shibai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/refund_failed_margin_left"
            android:text="@string/refund_failed"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/refund_detail_padding"
        android:layout_marginLeft="@dimen/refund_failed_btn_margin_left"
        android:layout_marginTop="@dimen/refund_detail_padding"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_apply_again"
            android:layout_width="@dimen/refund_failed_btn_width"
            android:layout_height="@dimen/refund_failed_btn_height"
            android:background="@drawable/btn_refund_detail"
            android:gravity="center"
            android:text="@string/apply_again"
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_compaint"
            android:layout_width="@dimen/refund_failed_btn_width"
            android:layout_height="@dimen/refund_failed_btn_height"
            android:layout_marginLeft="@dimen/complaint_compamy_margin_left"
            android:background="@drawable/btn_refund_detail"
            android:gravity="center"
            android:text="@string/complaint_company"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>