<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/total_gray" >

    <LinearLayout
        android:id="@+id/ll_search_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/total_gray"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="13dp"
            android:text="@string/find_sharefriends"
            android:textColor="@color/unselected_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_search_friends"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fund_grid_xian"
            android:background="@color/sharefir_s_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white" >

            <View
                android:layout_width="@dimen/fund_grid_xian"
                android:layout_height="match_parent"
                android:background="@color/sharefir_s_list" />

            <RelativeLayout
                android:id="@+id/rl_weixin_friends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_iv1"
                    android:layout_alignTop="@+id/iv_iv1"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/iv_iv1"
                    android:gravity="center"
                    android:text="@string/search_wechar"
                    android:textColor="@color/share_8a8aa0"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/fund_grid_xian"
                android:layout_height="match_parent"
                android:background="@color/sharefir_s_list" />

            <RelativeLayout
                android:id="@+id/rl_qq_friends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/ico_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_iv2"
                    android:layout_alignTop="@+id/iv_iv2"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/iv_iv2"
                    android:gravity="center"
                    android:text="@string/search_qq"
                    android:textColor="@color/share_8a8aa0"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/fund_grid_xian"
                android:layout_height="match_parent"
                android:background="@color/sharefir_s_list" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fund_grid_xian"
            android:background="@color/sharefir_s_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white" >

            <View
                android:layout_width="@dimen/fund_grid_xian"
                android:layout_height="match_parent"
                android:background="@color/sharefir_s_list" />

            <RelativeLayout
                android:id="@+id/rl_weibo_friends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/weibo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_iv3"
                    android:layout_alignTop="@+id/iv_iv3"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/iv_iv3"
                    android:gravity="center"
                    android:text="@string/search_weibo"
                    android:textColor="@color/share_8a8aa0"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/fund_grid_xian"
                android:layout_height="match_parent"
                android:background="@color/sharefir_s_list" />

            <RelativeLayout
                android:id="@+id/rl_phone_friends"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_iv4"
                    android:layout_alignTop="@+id/iv_iv4"
                    android:layout_marginLeft="11dp"
                    android:layout_toRightOf="@+id/iv_iv4"
                    android:gravity="center"
                    android:text="@string/search_phone"
                    android:textColor="@color/share_8a8aa0"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/fund_grid_xian"
                android:layout_height="match_parent"
                android:background="@color/sharefir_s_list" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/fund_grid_xian"
            android:background="@color/sharefir_s_list" />
    </LinearLayout>

</RelativeLayout>