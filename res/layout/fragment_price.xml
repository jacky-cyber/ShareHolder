<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#5d8adb"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_price1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/share_situation"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_price2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/share_news"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_price3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/share_announcement"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_price4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/share_research_report"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_price5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/share_comment"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#5d8adb"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" >
            <ImageView 
                android:id="@+id/iv_price_1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" >
            <ImageView 
                android:id="@+id/iv_price_2"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" >
            <ImageView 
                android:id="@+id/iv_price_3"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" >
            <ImageView 
                android:id="@+id/iv_price_4"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1" >
            <ImageView 
                android:id="@+id/iv_price_5"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <com.example.shareholders.common.MyViewPager
        android:id="@+id/price_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

</LinearLayout>