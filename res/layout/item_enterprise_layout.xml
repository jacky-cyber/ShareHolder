<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_prise_top_blank_height"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_item_enterprise_style"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_enterprise_logo_margin_left"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/item_enterprise_logo_margin_left"
                        android:src="@drawable/ico_qiye" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/one_magin_left"
                        android:textColor="#f7931e"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_en_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/item_enterprise_name_margin_left"
                        android:text="阿里巴巴哈哈"
                        android:textColor="#262626"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- 地点职位和时间 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_enterprise_location_time_margin_left"
                    android:orientation="vertical" >

                    <!-- 地点和职位 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_enterprise_location_height"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/item_enterprise_location_logo_margin_left"
                            android:src="@drawable/ico_didian3" />

                        <TextView
                            android:id="@+id/tv_en_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/item_enterprise_img_pic_margin"
                            android:text="深圳"
                            android:textColor="#848484"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_en_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/item_enterprise_position_location_margin"
                            android:text="副经理"
                            android:textColor="#848484"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_width_small"
                        android:background="#eaeaea" />

                    <!-- 日期和提纲 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_enterprise_date_margin_top"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/item_enterprise_location_logo_margin_left"
                                android:src="@drawable/ico_shijian3" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/item_enterprise_img_pic_margin"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/tv_b_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="07.08"
                                    android:textColor="#848484"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-----"
                                    android:textColor="#848484"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/tv_a_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="07.08"
                                    android:textColor="#848484"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                                 android:id="@+id/ll_outline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/item_enterprise_outline_time_margin"
                                android:src="@drawable/ico_tigang3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/one_magin_left"
                                android:text="提纲"
                                android:textColor="#848484"
                                android:textSize="11sp" />

                            <RelativeLayout
                           
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/item_enterprise_shangla_margin_left"
                                android:paddingRight="@dimen/item_enterprise_location_logo_margin_left" >

                                <ImageView
                                    android:id="@+id/iv_xiala"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ico_xiala" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <!-- 地点职位和时间 结束 -->

            </LinearLayout>

            <!-- 提纲显示的内容 -->

            <RelativeLayout
                android:id="@+id/rl_outline_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xiala_show_bg"
                 >

                <TextView
                    android:id="@+id/tv_outline_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view_blank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_enterprise_date_margin_top"
                android:layout_margin="@dimen/line_width"
                android:background="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_en_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_edit_margin_left"
            android:layout_marginRight="@dimen/btn_edit_margin_left"
            android:layout_marginTop="@dimen/btn_edit_margin_top"
            android:background="@drawable/btn_edit_style"
            android:gravity="center"
            android:text="@string/edit_line"
            android:textColor="#6383ea"
            android:textSize="9sp" />
    </LinearLayout>

</LinearLayout>