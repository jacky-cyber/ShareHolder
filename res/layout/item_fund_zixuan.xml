<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/item_tuijian_paddingleft"
    android:paddingRight="@dimen/item_tuijian_paddingright" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/item_tuijian_paddingright"
        android:layout_marginBottom="@dimen/fund_text_top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_zi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="TextView"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#262626"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="@dimen/item_zixuan_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >
            

            <TextView
                android:id="@+id/tv_zi_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="11sp"
                android:textColor="#dd8822" />

            <TextView
                android:id="@+id/tv_zi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                 android:textSize="11sp"
                 android:layout_marginLeft="@dimen/item_zixuan_left"
                android:textColor="#dd8822" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_zi_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>