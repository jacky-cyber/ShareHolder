<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_verified_survey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_survey_signed_rl_height"
            android:background="#f2f2f2"
            android:paddingLeft="@dimen/fragment_survey_signed_rl_padding_left" >

            <ImageView
                android:id="@+id/iv_verified_survey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_chakangengduo_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_survey_signed_text_margin_left"
                android:layout_toRightOf="@+id/iv_verified_survey"
                android:text="@string/verified"
                android:textColor="#666666"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="#999999" />

        <com.example.shareholders.common.MyListView
            android:id="@+id/lv_verified_survey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >
        </com.example.shareholders.common.MyListView>

        <RelativeLayout
            android:id="@+id/rl_unverify_survey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_survey_signed_rl_height"
            android:background="#f2f2f2"
            android:paddingLeft="@dimen/fragment_survey_signed_rl_padding_left" >

            <ImageView
                android:id="@+id/iv_unverify_survey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_chakangengduo_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_survey_signed_text_margin_left"
                android:layout_toRightOf="@+id/iv_unverify_survey"
                android:text="@string/unverify"
                android:textColor="#666666"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="#999999" />

        <com.example.shareholders.common.MyListView
            android:id="@+id/lv_unverify_survey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >
        </com.example.shareholders.common.MyListView>

        <RelativeLayout
            android:id="@+id/rl_verify_failed_survey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_survey_signed_rl_height"
            android:background="#f2f2f2"
            android:paddingLeft="@dimen/fragment_survey_signed_rl_padding_left" >

            <ImageView
                android:id="@+id/iv_verify_failed_survey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_chakangengduo_normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_survey_signed_text_margin_left"
                android:layout_toRightOf="@+id/iv_verify_failed_survey"
                android:text="@string/verify_failed"
                android:textColor="#666666"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="#999999" />

        <com.example.shareholders.common.MyListView
            android:id="@+id/lv_verify_failed_survey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >
        </com.example.shareholders.common.MyListView>
    </LinearLayout>

</ScrollView>