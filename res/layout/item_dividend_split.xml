<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/position_item_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_equality_register_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/configuration_detail_title_padding_left"
        android:text="11-01-01"
        android:textColor="#333333"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_split_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="8.我不知道"
        android:textColor="#333333"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_split_convert_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="@dimen/spilt_convert_rate_padding_right"
        android:text="8.88%"
        android:textColor="#333333"
        android:textSize="11sp" />

</LinearLayout>