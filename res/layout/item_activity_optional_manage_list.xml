<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/optional_fund_item_height"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal" >
    
        
        <ImageView 
            android:id="@+id/iv_of_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/optional_fund_item_height"
            android:layout_marginRight="@dimen/optional_fund_item_delete_margin_right"
            android:src="@drawable/ico_delete"
            android:padding="5dp"
            />
      
	    <TextView
	        android:id="@+id/item_fund_name"
	        android:layout_width="@dimen/foud_name_width"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textColor="@color/black"
	        android:textSize="13sp" />
	            
	    <TextView
	        android:id="@+id/item_fund_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="22dp"
	        android:gravity="center"
	        android:textColor="@color/foud_code_color"
	        android:textSize="13sp" />
		     
	    
	    <ImageView 
            android:id="@+id/iv_of_item_drag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="@dimen/optional_fund_item_height"
            android:src="@drawable/ico_sort"
            />

</LinearLayout>
