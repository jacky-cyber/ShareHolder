<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:padding="5dp"
    android:background="@color/white"
    android:orientation="horizontal"
     >
   <LinearLayout 
       android:layout_height="match_parent"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:orientation="vertical"
       android:gravity="center"
       >
       <TextView 
           android:id="@+id/tv_finance_name"
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="浦发银行"
           android:textSize="16sp"
           />
       <TextView 
           android:id="@+id/tv_finance_num"
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="600000"
           />
   </LinearLayout>
	<TextView 
	    android:id="@+id/tv_finance_new"
	    android:gravity="center"
	    android:text="15.2"
	    android:textSize="16sp"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="match_parent"/>
	<TextView 
	    android:id="@+id/iv_finance_zhangdie"
	    android:gravity="center"
	    android:text="0.02"
	    android:textSize="16sp"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="match_parent"/>
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:gravity="center">
	    <ImageView 
	        android:visibility="gone"
	        android:id="@+id/iv_finance_zhangfu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ico_share_zhang"/>
	    <TextView 
	        android:layout_marginLeft="3dp"
	        android:layout_marginRight="3dp"
	        android:gravity="center"
	        android:id="@+id/tv_finance_zhangfu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="0.33%"
	        android:textSize="16sp"
	        android:textColor="@color/share_f73131"/>
	</LinearLayout>
</LinearLayout>
