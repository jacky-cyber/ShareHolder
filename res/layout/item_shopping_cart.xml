<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_ll_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_select_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_iv_select_margin_left"
            android:layout_marginRight="@dimen/item_iv_select_margin_right"
            android:src="@drawable/btn_fs_unselected" />

        <LinearLayout
            android:id="@+id/ll_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ico_gongsi"
                android:drawablePadding="@dimen/gd_drawable_padding"
                android:ellipsize="end"
                android:text="禾口公司"
                android:textColor="#f7931e"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_iv_select_margin_left"
                android:layout_marginRight="@dimen/item_iv_select_margin_right"
                android:src="@drawable/btn_gengduo" />
        </LinearLayout>
    </LinearLayout>

    <!-- divider -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="#999999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_ll_goods_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_select_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_iv_select_margin_left"
            android:layout_marginRight="@dimen/item_iv_select_margin_right"
            android:src="@drawable/btn_fs_unselected" />

        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="@dimen/pc_iv_size"
            android:layout_height="@dimen/pc_iv_size"
            android:layout_marginRight="@dimen/pc_good_margin"
            android:src="@drawable/empty_photo" />

        <LinearLayout
            android:id="@+id/ll_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_iv_select_margin_right"
                android:ellipsize="end"
                android:lines="2"
                android:text="唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏唇膏"
                android:textColor="#333333"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="￥"
                    android:textColor="#f70b0b"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="18,000"
                    android:textColor="#f70b0b"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_goods_details_popup_add_and_sub"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:padding="5dp"
                    android:src="@drawable/btn_goods_details_add" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="#7a7a7a" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:src="#7a7a7a" />

                <ImageView
                    android:id="@+id/iv_sub"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:padding="5dp"
                    android:src="@drawable/btn_sub" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- divider -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/pc_gap_margin_top"
        android:src="#999999" />

</LinearLayout>