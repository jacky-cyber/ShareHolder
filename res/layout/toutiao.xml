<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/viewpager_height" >

            <com.example.shareholders.view.TouTiaoHeadViewPager
                android:id="@+id/vp_toutiao_head"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/viewpager_height" >
            </com.example.shareholders.view.TouTiaoHeadViewPager>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_dots"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ll_dots_height"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/popular_goods_height"
            android:background="@color/white"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="@dimen/popular_label_width"
                android:layout_height="match_parent"
                android:background="@color/white" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_remenshangpin" />
            </RelativeLayout>

            <com.example.shareholders.common.HorizontalListView
                android:id="@+id/hl_popular_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/popular_enterprise_height"
            android:layout_marginTop="@dimen/ll_dots_height"
            android:background="@color/white"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="@dimen/popular_label_width"
                android:layout_height="match_parent"
                android:background="@color/white" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_remengongsi" />
            </RelativeLayout>

            <com.example.shareholders.common.HorizontalListView
                android:id="@+id/hl_popular_enterprise"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/popular_goods_height"
            android:layout_marginTop="@dimen/ll_dots_height"
            android:background="@color/white"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="@dimen/popular_label_width"
                android:layout_height="match_parent"
                android:background="@color/white" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_xinpinshangjia" />
            </RelativeLayout>

            <com.example.shareholders.common.HorizontalListView
                android:id="@+id/hl_newest_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/popular_goods_height"
            android:layout_marginTop="@dimen/ll_dots_height"
            android:background="@color/white"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="@dimen/popular_label_width"
                android:layout_height="match_parent"
                android:background="@color/white" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_cuxiaoshangpin" />
            </RelativeLayout>

            <com.example.shareholders.common.HorizontalListView
                android:id="@+id/hl_promote_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>