<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="286dp"
    android:layout_height="395dp"
    android:background="@drawable/bg_alert_dialog_style"
    android:orientation="vertical" >
     
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="13dp"
	        android:text="修改送货地址"
	        android:textSize="13sp"
	        android:textColor="#666666"
	        />
	    
	    <ImageView 
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:padding="5dp"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="6.5dp"
    		android:layout_marginTop="6.5dp"
    		android:src="@drawable/btn_quxiaogouwuche"
	            />
	</RelativeLayout>
    
    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="30dp"
        >
        
        <TableRow >
            <TextView
		        android:layout_width="65dp"
		        android:layout_height="wrap_content"
		        android:text="收货人  "
		        android:textSize="14sp"
		        android:textColor="#474747"
        	/>
            <EditText 
                android:id="@+id/et_receiver"
                android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="sola"
		        android:textSize="14sp"
		        android:textColor="#333333"
		        />
        </TableRow>
        
        <TableRow >
            <TextView
		        android:layout_width="65dp"
		        android:layout_height="wrap_content"
		        android:text="联系电话 "
		        android:textSize="14sp"
		        android:textColor="#474747"
        	/>
            <EditText 
                android:id="@+id/et_telephone"
                android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="13287777777"
		        android:textSize="14sp"
		        android:textColor="#333333"
		        />
        </TableRow>
        
        <TableRow >
            <TextView
		        android:layout_width="65dp"
		        android:layout_height="wrap_content"
		        android:text="选择地区"
		        android:textSize="14sp"
		        android:textColor="#474747"
        	/>
            <TextView 
                android:id="@+id/tv_district"
                android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:paddingLeft="14dp"
		        android:text="address"
		        android:textSize="14sp"
		        android:textColor="#333333"
		        />
        </TableRow>
        
        <TableRow >
            <TextView
		        android:layout_width="65dp"
		        android:layout_height="wrap_content"
		        android:text="详细地址 "
		        android:textSize="14sp"
		        android:textColor="#474747"
        	/>
            <EditText 
                android:id="@+id/et_address"
                android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="address_details"
		        android:textSize="14sp"
		        android:textColor="#333333"
		        />
        </TableRow>
        
    </TableLayout>
	 
    <TextView
	    android:id="@+id/tv_ok"
	    android:layout_width="match_parent"
	    android:layout_height="25dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="15dp"
	    android:gravity="center"
	    android:text="确定"
	    android:textColor="#ffffff"
	    android:textSize="16sp"
	    android:background="@drawable/btn_survey_list_style" />


</LinearLayout>
