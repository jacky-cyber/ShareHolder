<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <!-- 登录顶部  开始 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/total_margin_left_small"
                android:paddingRight="@dimen/total_margin_left_small"
                android:text="@string/survey_list_cancel"
                android:textColor="#0071bb"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="@string/login"
                android:textColor="#0071bb"
                android:textSize="18sp" />
        </RelativeLayout>

        <!-- 登录顶部  结束 -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="#929292" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/enter_touhq_account_margin_bottom"
            android:layout_marginLeft="@dimen/enter_touhq_account_margin_left"
            android:layout_marginTop="@dimen/enter_touhq_account_margin_top"
            android:text="@string/enter_touhq_account"
            android:textColor="#5d5d5d"
            android:textSize="14sp" />

        <com.example.shareholders.common.ClearEditText
            android:id="@+id/et_account"
            android:layout_width="@dimen/tv_login_account_width"
            android:layout_height="@dimen/et_login_height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_login_account"
            android:gravity="center"
            android:hint="@string/account_hint"
            android:paddingRight="5dp"
            android:phoneNumber="true"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <com.example.shareholders.common.ClearEditText
            android:id="@+id/et_password"
            android:layout_width="@dimen/tv_login_account_width"
            android:layout_height="@dimen/et_login_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/et_passward_margin_top"
            android:background="@drawable/btn_login_account"
            android:gravity="center"
            android:hint="@string/passward_hint"
            android:inputType="textPassword"
            android:paddingRight="5dp"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/tv_login_account_width"
            android:layout_height="@dimen/et_login_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/et_passward_margin_top"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="@dimen/tv_login_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/et_passward_margin_top"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/forget_password"
                android:textColor="#dc8722" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>