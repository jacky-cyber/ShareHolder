<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/invite_friends_item_height" >

    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_weixuanzhong_normal" />

    <com.example.shareholders.common.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/invite_friends_item_head_width"
        android:layout_height="@dimen/invite_friends_item_head_width"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/invite_friends_item_head_margin_left"
        android:layout_toRightOf="@id/iv_choose"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/invite_friends_item_head_margin_left"
        android:layout_toRightOf="@id/iv_head"
        android:text="韩梅梅"
        android:textColor="#4d4d4d"
        android:textSize="12sp" />

    <ImageView 
        android:layout_height="@dimen/line_width_small"
        android:background="#cccccc"
        android:layout_toRightOf="@id/iv_head"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/invite_friends_item_head_margin_left"
        android:layout_width="match_parent" />

</RelativeLayout>